extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control.mb-2(type='text' placeholder='First name (Christian) last' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) )
      label(for='family_name') Family Name:
      input#family_name.form-control.mb-2(type='text' placeholder='Family name (surname)' name='family_name' required='true' value=(undefined===author ? '' : author.family_name))
      label(for='date_of_birth') Date of birth:
      input#date_of_birth.form-control.mb-2(type='date' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth_format) placeholder='dd/mm/yyyy' )
      label(for='date_of_death') Date of death:
      input#date_of_death.form-control.mb-2(type='date' name='date_of_death' value=(undefined===author ? '' : author.date_of_death_format) placeholder='dd/mm/yyyy' )
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg